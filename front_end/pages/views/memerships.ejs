<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="../../assets/static/shart.png" />

    <title>GymFit - My MemberShips</title>
    <style>
        .gym-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
            padding: 20px;
            width: 100%;
            margin: 0 auto;
            max-width: 1400px;
        }

        section article {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 10px;
            padding: 20px;
        }

        section article h2 {
            font-family: "Poppins", sans-serif;
            font-weight: 600;
            font-size: 36px;
            background: linear-gradient(to left, rgb(252, 194, 153) 10%, #e85d04 50%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            transition: all 0.5s ease;
        }

        section article h2:hover {
            scale: 1.1;
            text-shadow: 0 0 5px rgba(232, 91, 4, 0.45), 0 0 5px rgba(232, 91, 4, 0.45);
        }

        section article h2::after {
            content: "";
            position: absolute;
            width: 0%;
            height: 3px;
            bottom: -5px;
            left: 0;
            background-color: #e85d04;
            transition: width 0.3s ease;
        }

        section article h2:hover::after {
            width: 100%;
        }

        @keyframes cardFadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Adjustments */
        @media (max-width: 1200px) {
            .gym-list {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .gym-list {
                grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
                gap: 20px;
                padding: 15px;
            }
        }

        @media (max-width: 480px) {
            .gym-list {
                grid-template-columns: 1fr;
                max-width: 320px;
                margin: 0 auto;
            }
        }
    </style>
</head>

<body>
    <app-layout role="<%= role %>"></app-layout>

    <main id="mainContent">
        <section>
            <article>
                <h2>My MemberShips</h2>
                <div class="gym-list">
                    <% gyms.forEach(gym => { %>
                        <gym-card
                          src="<%= gym.image %>"
                          name="<%= gym.name %>"
                          place="<%= gym.town %>"
                          total-feedback="<%= gym.reviews.totalreviews %>"
                          rate="<%= gym.reviews.totalreviews > 0 
                          ? Math.min((gym.reviews.totalstars / gym.reviews.totalreviews), 5).toFixed(1) 
                          : 0 %>"   
                          gym-id="<%= gym._id %>"
                
                        >
                        </gym-card>
                        <% }); %>
                </div>
            </article>
        </section>
    </main>

    <script src="../../scripts/components/app-layout.js"></script>
    <script src="../../scripts/components/map.js"></script>
    <script src="../../scripts/components/gym-card.js"></script>

</body>

</html>