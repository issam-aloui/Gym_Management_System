<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="../../assets/static/shart.png" />
    <link rel="stylesheet" href="../../css/home-user.css" />
    <title>GymFit</title>
  </head>

  <body>
    <div id="loader-placeholder" style="
      position:fixed;
      top:0; left:0; width:100vw; height:100vh;
      background:rgba(255,255,255,0.95);
      display:flex;
      flex-direction:column;
      align-items:center;
      justify-content:center;
      z-index:9999;
      transition:opacity 0.4s;
    ">
      <div style="
        border: 6px solid #e0e0e0;
        border-top: 6px solid #e85d04;
        border-radius: 50%;
        width: 48px;
        height: 48px;
        animation: spin 0.8s linear infinite;
        margin-bottom: 1.2rem;
      "></div>
      <div style="font-family: 'Poppins', sans-serif; color: #222; font-size: 1.1rem;">
        Loading, please wait...
      </div>
    </div>
    <style>
      @keyframes spin { to { transform: rotate(360deg); } }
    </style>
    <app-layout role="<%= role %>" username="<%= username %>"></app-layout>
    <main id="mainContent">
      <section class="slider">
        <div class="slide-track">
          <div class="slide slide-1">
            <div class="slide-1-content">
              <div class="slide-1-heading">
                <h1>Own a Gym ?</h1>
                <h1>Manage it Easily with us!</h1>
                <p>
                  Join our platform and grow your gym business online, Simplify
                  class management, track members, and boost your revenue
                </p>
                <cta-button>Become a Gym Owner</cta-button>
              </div>
            </div>
          </div>
          <div class="slide slide-2"></div>
          <div class="slide slide-3"></div>
        </div>
        <!-- Dots navigation -->
        <div class="slider-dots">
          <span class="dot active" data-index="0"></span>
          <span class="dot" data-index="1"></span>
          <span class="dot" data-index="2"></span>
        </div>
      </section>
      <section class="Explore">
        <article class="Trending-gyms">
          <h2>Trending Gyms</h2>
          <div class="gym-list">
            <% toptrendingGyms.forEach(gym => { %>
            <gym-card
              src="<%= gym.image %>"
              name="<%= gym.name %>"
              place="<%= gym.town %>"
              total-feedback="<%= gym.reviews.totalreviews %>"
              rate="<%= gym.reviews.totalreviews > 0 
              ? Math.min((gym.reviews.totalstars / gym.reviews.totalreviews), 5).toFixed(1) 
              : 0 %>"   
              gym-id="<%= gym._id %>"
              gym-route="/join"
            >
            </gym-card>
            <% }); %>
          </div>
        </article>
        <article class="local-gyms">
          <h2>Best Gyms</h2>
          <div class="gym-list">
            <% topstarsGyms.forEach(gym => { %>
            <gym-card
              src="<%= gym.image %>"
              name="<%= gym.name %>"
              place="<%= gym.town %>"
              total-feedback="<%= gym.reviews.totalreviews %>"
              rate="<%= gym.reviews.totalreviews > 0 
              ? Math.min((gym.reviews.totalstars / gym.reviews.totalreviews), 5).toFixed(1) 
              : 0 %>"            
              gym-id="<%= gym._id %>"
              gym-route="/join"
            >
            </gym-card>
            <% }); %>
          </div>
        </article>
        <article class="Explore-gyms">
          <h2>Explore new gyms</h2>
          <div class="gym-list">
            <% gyms.forEach(gym => { %>
            <gym-card
              src="<%= gym.image %>"
              name="<%= gym.name %>"
              place="<%= gym.town %>"
              total-feedback="<%= gym.reviews.totalreviews %>"
              rate="<%= gym.reviews.totalreviews > 0 
              ? Math.min((gym.reviews.totalstars / gym.reviews.totalreviews), 5).toFixed(1) 
              : 0 %>"   
              gym-id="<%= gym._id %>"
              gym-route="/join"
            >
            </gym-card>

            <% }); %>
          </div>
          <cta-button>Explore more</cta-button>
        </article>
      </section>
    </main>
    <!-- Scripts -->
    <script src="../../scripts/components/app-layout.js"></script>
    <script src="../../scripts/components/map.js"></script>
    <script src="../../scripts/components/gym-card.js"></script>
    <script src="../../scripts/home-user.js"></script>
    <script src="../../scripts/components/button.js"></script>
    <script>
  window.addEventListener('load', function() {
    const loader = document.getElementById('loader-placeholder');
    loader.style.opacity = 0;
    setTimeout(() => loader.style.display = 'none', 400);
  });
</script>
  </body>
</html>
